            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"/>
        <TextView
            android:id="@+id/ingredient_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"/>
        <TextView
            android:id="@+id/ingredient_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"/>

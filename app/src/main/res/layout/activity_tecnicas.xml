            android:textColor="#E81212"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Cortar Cebolla"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E81212"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Cocer Pasta"/>

        <TextView
            android:layout_width="match_parent"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/fondo_principal"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/bt_para_comer_aqui"
            android:background="@drawable/madera_boton"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:text="Para Comer Aqui"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/dancin_script_regular"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/bt_para_llevar"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/madera_boton"
            android:text="Para llevar"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/dancin_script_regular"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/bt_para_ir_comiendo"
            android:background="@drawable/madera_boton"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:text="Para ir Comiendo"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/dancin_script_regular"
            android:layout_marginVertical="8dp" />

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="124dp"
                   android:layout_height="124dp"
                   android:layout_marginEnd="16dp"
                   android:background="@drawable/postit_fondo"
                   android:fontFamily="@font/dancin_script_regular"
                   android:text="Tips"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:textSize="40sp"/>

               <TextView
                   android:id="@+id/bt_basicos"
                   android:layout_width="124dp"
                   android:layout_height="124dp"
                   android:layout_marginEnd="16dp"
                   android:layout_gravity="center"
                   android:text="Basicos"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textSize="40sp"
                   android:background="@drawable/postit_fondo"
                   android:fontFamily="@font/dancin_script_regular"/>

               <TextView
                   android:layout_width="124dp"
                   android:layout_height="124dp"
                   android:layout_marginEnd="16dp"
                   android:text="Salsas"
                   android:gravity="center"
                   android:textSize="40sp"
                   android:textColor="@color/black"
                   android:background="@drawable/postit_fondo"
                   android:fontFamily="@font/dancin_script_regular"/>

           </LinearLayout>
       </HorizontalScrollView>
</LinearLayout>
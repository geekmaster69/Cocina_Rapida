            android:text="@string/jamon"/>

        <TextView
            android:id="@+id/bt_tecnicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="start"
